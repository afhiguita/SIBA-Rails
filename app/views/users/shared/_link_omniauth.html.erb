<%- if devise_mapping.omniauthable? %>
  <div class="form-group text-center text-muted content-divider">
    <span class="px-2">or sign in with</span>
  </div>

  <div class="form-group text-center">
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= link_to(omniauth_authorize_path(resource_name, provider), class: 'btn btn-outline bg-indigo border-indigo text-indigo btn-icon rounded-round border-2') do %>
         <% @str = "<i class=\"icon-#{OmniAuth::Utils.camelize(provider).downcase}\"></i>".html_safe %>
         <%= @str %>
      <% end %>
    <% end -%>
  </div>
<% end -%>